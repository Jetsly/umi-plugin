{
  "compilerOptions": {
    "outDir": "lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "declarationDir": "./",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "es7", "dom"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.spec.*"]
}
